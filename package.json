{
  "name": "examples-starter",
  "version": "0.0.0",
  "description": "一个基于pnpm monorepo、vue3、vite、多页的快速启动模版，主要用于写一些例子等",
  "scripts": {
    "dev": "vite --port 8080",
    "check-deps": "ncu",
    "test": "jest",
    "cov": "jest --coverage",
    "prepare": "husky install",
    "husky-msg-init": "husky add .husky/pre-commit \"npx lint-staged --allow-empty \"$1\"\"&yarn husky add .husky/commit-msg \"npx commitlint --edit \"$1\"\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "ts-check": "tsc --noEmit",
    "lint-check": "eslint pages",
    "prettier-check": "prettier pages --check",
    "check-all": "run-p ts-check lint-check prettier-check"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mengxinssfd/examples-starter.git"
  },
  "keywords": [
    "vue3",
    "starter"
  ],
  "author": "DYH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mengxinssfd/examples-starter/issues"
  },
  "homepage": "https://github.com/mengxinssfd/examples-starter#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^16.11.42",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "core-js": "^3.25.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.5.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^16.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "sass": "^1.55.0",
    "semver": "^7.3.7",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.3",
    "vue": "^3.2.39"
  }
}
